      <script>
        function alegereButon(id) {
          var numarRandom = Math.floor(Math.random(1) * 4);
          if (numarRandom == id) {
            document.getElementById("lista").innerHTML += `
              <div class="card text-bg-success mb-3"">
                <div class="card-body">
                  <h5 class="card-title">WINNER!</h5>
                </div>
              </div>`;
          } else {
            document.getElementById("lista").innerHTML += `
              <div class="card text-bg-danger mb-3">
              <div class="card-body">
                <h5 class="card-title">OH NO!</h5>
              </div>
            </div>`;
          }
        }
        function restart() {
          location.reload();
        }
      </script>
